{
	"task-runners": [
		{
			"runner-type": "javascript",
			"workdir": "/home/runner",
			"command": "/usr/local/bin/node",
			"args": [
				"--disallow-code-generation-from-strings",
				"--disable-proto=delete",
				"/opt/runners/task-runner-javascript/dist/start.js"
			],
			"health-check-server-port": "5681",
			"allowed-env": [
				"PATH",
				"GENERIC_TIMEZONE",
				"NODE_OPTIONS",
				"NEWFLOW_RUNNERS_AUTO_SHUTDOWN_TIMEOUT",
				"NEWFLOW_RUNNERS_TASK_TIMEOUT",
				"NEWFLOW_RUNNERS_MAX_CONCURRENCY",
				"NEWFLOW_SENTRY_DSN",
				"NEWFLOW_VERSION",
				"ENVIRONMENT",
				"DEPLOYMENT_NAME"
			],
			"env-overrides": {
				"NODE_FUNCTION_ALLOW_BUILTIN": "crypto",
				"NODE_FUNCTION_ALLOW_EXTERNAL": "moment",
				"NEWFLOW_RUNNERS_HEALTH_CHECK_SERVER_HOST": "0.0.0.0"
			}
		},
		{
			"runner-type": "python",
			"workdir": "/home/runner",
			"command": "/opt/runners/task-runner-python/.venv/bin/python",
			"args": ["-m", "src.main"],
			"health-check-server-port": "5682",
			"allowed-env": [
				"PATH",
				"NEWFLOW_RUNNERS_LAUNCHER_LOG_LEVEL",
				"NEWFLOW_RUNNERS_AUTO_SHUTDOWN_TIMEOUT",
				"NEWFLOW_RUNNERS_TASK_TIMEOUT",
				"NEWFLOW_RUNNERS_MAX_CONCURRENCY",
				"NEWFLOW_SENTRY_DSN",
				"NEWFLOW_VERSION",
				"ENVIRONMENT",
				"DEPLOYMENT_NAME"
			],
			"env-overrides": {
				"PYTHONPATH": "/opt/runners/task-runner-python",
				"NEWFLOW_RUNNERS_STDLIB_ALLOW": "",
				"NEWFLOW_RUNNERS_EXTERNAL_ALLOW": ""
			}
		}
	]
}
